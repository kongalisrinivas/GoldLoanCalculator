<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gold_bg"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/app_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Address : \nGachibowli, Hyderabad, \nTelangana, 500075"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/mobile"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 8341 346 994"
        android:drawablePadding="4dp"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_baseline_call_24"/>
    <TextView
        android:id="@+id/mobile1"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 9608 143 143"
        android:textSize="18sp"
       android:drawableLeft="@drawable/ic_baseline_call_24" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:text="Email : pravrasolutions@gmail.com"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/closeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="40dp"
        android:background="@color/black"
        android:text="Close"
        android:textColor="@color/gold_bg" />

</LinearLayout>